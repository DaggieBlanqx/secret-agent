{
  "compilerOptions": {
    "outDir": "../build/replay-app-frontend",
    "module": "esnext",
    "target": "es2018",
    "moduleResolution": "node",
    "composite": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~frontend/*": ["frontend/*"],
      "~backend/*": ["backend/*"],
      "~shared/*": ["shared/*"]
    },
    "types": ["@types/node", "@nuxt/types", "@types/chrome"]
  },
  "include": ["**/*.json", "frontend", "shared"],
  "exclude": ["./tmp-files/**/*.ts", "backend", "static", "dist", "node_modules", "**/node_modules"]
}
