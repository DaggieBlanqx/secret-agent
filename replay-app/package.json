{
  "name": "@secret-agent/replay-app",
  "author": "Data Liberation Foundation",
  "private": true,
  "contributors": [
    "Caleb Clark",
    "Blake Byrnes"
  ],
  "repository": "git@github.com:ulixee/secret-agent.git",
  "description": "A browser for visually replaying your scraper scripts",
  "version": "1.0.0-alpha.4",
  "main": "./index.js",
  "build": {
    "appId": "dev.secretagent.replay",
    "productName": "SecretAgentReplay",
    "mac": {
      "target": "tar.gz",
      "artifactName": "replay-${version}-${os}.tar.gz"
    },
    "win": {
      "target": "tar.gz",
      "artifactName": "replay-${version}-${os}.tar.gz"
    },
    "linux": {
      "executableName": "secretagentreplay",
      "category": "Network",
      "target": "tar.gz",
      "artifactName": "replay-${version}-${os}.tar.gz"
    },
    "publish": [
      "github"
    ]
  },
  "scripts": {
    "build:frontend": "nuxt-ts build",
    "build:backend-paths": "tscpaths -p tsconfig.backend.json -s ./ -o ../build/replay-app",
    "build:backend": "tsc -b tsconfig.backend.json && yarn build:backend-paths && cp package.json ../build/replay-app",
    "build:icons": "electron-icon-builder -f --input=./frontend/static/AppIcon.appiconset/icon_512@2x.png --output=../build/replay-app/build",
    "build:dist": "yarn build:frontend && yarn build:backend && yarn build:icons && yarn logs:reset",
    "build:pack": "yarn build:dist && cd ../build/replay-app && yarn && electron-builder -mwl",
    "build": "yarn build:dist",
    "clean": "rm -rf ../build/replay-app/static && tsc -b --clean tsconfig.backend.json && tsc -b --clean tsconfig.json",
    "dev": "yarn build:backend && concurrently -k -n backend,frontend -c blue,green \"yarn start:backend\" \"nuxt-ts dev\"",
    "start:backend": "NODE_ENV=development electron ../build/replay-app",
    "start:frontend": "nuxt-ts start",
    "logs": "touch ~/Library/Logs/@secret-agent/replay-app/main.log && tail -f -100 ~/Library/Logs/@secret-agent/replay-app/main.log",
    "logs:reset": "touch ~/Library/Logs/@secret-agent/replay-app/main.log && rm ~/Library/Logs/@secret-agent/replay-app/main.log"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/runtime-corejs2": "^7.9.6",
    "animejs": "^3.2.0",
    "axios": "^0.19.2",
    "core-js": "2",
    "electron-log": "^4.2.1",
    "mobx": "^5.15.4",
    "mobx-vue": "^2.0.10",
    "nuxt-class-component": "^1.3.0",
    "nuxt-property-decorator": "^2.7.2",
    "nuxt-start": "^2.13.3",
    "source-map-support": "^0.5.19",
    "uuid": "^8.1.0",
    "vue-slider-component": "^3.2.2",
    "vue-styled-components": "^1.5.1"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^0.6.6",
    "@nuxt/typescript-runtime": "^0.4.6",
    "@types/chrome": "^0.0.113",
    "@types/electron": "^1.6.10",
    "@types/node": "^12.7.11",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "css-loader": "~3.5.3",
    "devtron": "^1.4.0",
    "electron": "9.1.0",
    "electron-builder": "^22.6.0",
    "electron-icon-builder": "^1.0.2",
    "node-sass": "^4.14.1",
    "nuxt": "^2.13.3",
    "pug": "^2.0.4",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^8.0.2",
    "tscpaths": "^0.0.9",
    "typescript": "~3.8.3",
    "vue": "^2.6.11"
  }
}
