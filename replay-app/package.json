{
  "name": "@secret-agent/replay-app",
  "author": "Data Liberation Foundation",
  "private": true,
  "contributors": [
    "Caleb Clark",
    "Blake Byrnes"
  ],
  "repository": "git@github.com:ulixee/secret-agent.git",
  "description": "A browser for visually replaying your scraper scripts",
  "version": "1.0.0-alpha.8",
  "main": "./index.js",
  "build": {
    "appId": "dev.secretagent.replay",
    "productName": "SecretAgentReplay",
    "mac": {
      "target": "dir",
      "artifactName": "replay-${version}-${os}${ext}"
    },
    "win": {
      "target": "dir",
      "artifactName": "replay-${version}-${os}${ext}"
    },
    "linux": {
      "executableName": "secretagentreplay",
      "category": "Network",
      "target": "dir",
      "artifactName": "replay-${version}-${os}${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "prerelease"
      }
    ]
  },
  "scripts": {
    "build:frontend": "cd frontend && vue-cli-service build",
    "build:backend-paths": "tscpaths -p tsconfig.json -s ./ -o ../build/replay-app",
    "build:backend": "tsc -b tsconfig.json && yarn build:backend-paths && cp package.json ../build/replay-app && cp -r static ../build/replay-app",
    "build:icons": "electron-icon-builder -f --input=./frontend/static/AppIcon.appiconset/icon_512@2x.png --output=../build/replay-app/build",
    "build:dist": "yarn build:frontend && yarn build:backend",
    "build": "yarn build:dist",
    "pack": "yarn build:icons && cd ../build/replay-app && electron-builder -mwl && pack.sh",
    "gh:publish": "yarn build:dist && cp .env ../build/replay-app && cd ../build/replay-app && yarn && export $(cat .env | xargs) && electron-builder -mwl -p=onTagOrDraft",
    "clean": "rm -rf ../build/replay-app/static && tsc -b --clean tsconfig.json && tsc -b --clean frontend/tsconfig.json",
    "dev": "yarn build:backend && concurrently -k -n backend,frontend -c blue,green \"yarn start:backend\" \"vue-cli-service serve\"",
    "start:backend": "cross-env CLEAR_LOGS=true WEBPACK_DEV_SERVER_URL=http://localhost:8080 NODE_ENV=development electron ../build/replay-app",
    "start:frontend": "cd frontend && ddqvue-cli-service serve --mode=development",
    "start": "electron ../build/replay-app",
    "logs": "touch ~/Library/Logs/@secret-agent/replay-app/main.log && tail -f -100 ~/Library/Logs/@secret-agent/replay-app/main.log"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/runtime-corejs2": "^7.10.5",
    "animejs": "^3.2.0",
    "axios": "^0.19.2",
    "core-js": "^2.6.5",
    "electron-log": "^4.2.1",
    "mobx": "^5.15.4",
    "mobx-vue": "^2.0.10",
    "source-map-support": "^0.5.19",
    "uuid": "^8.1.0",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.4",
    "vue-property-decorator": "^9.0.0",
    "vue-slider-component": "^3.2.2",
    "vue-styled-components": "^1.5.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.113",
    "@types/electron": "^1.6.10",
    "@types/node": "^12.7.11",
    "@vue/cli-plugin-babel": "^4.2.3",
    "@vue/cli-plugin-typescript": "^4.2.3",
    "@vue/cli-service": "^4.2.3",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "css-loader": "~3.5.3",
    "devtron": "^1.4.0",
    "electron": "9.1.0",
    "electron-builder": "^22.6.0",
    "electron-icon-builder": "^1.0.2",
    "node-sass": "^4.14.1",
    "pug": "^2.0.4",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^8.0.2",
    "shx": "^0.3.2",
    "tscpaths": "^0.0.9",
    "typescript": "~3.8.3",
    "vue": "^2.6.11",
    "vue-cli-plugin-typescript": "^0.0.1",
    "vue-template-compiler": "^2.6.11"
  }
}
