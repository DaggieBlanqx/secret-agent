{
  "name": "secret-agent",
  "version": "0.2.8",
  "private": true,
  "description": "The Web Browser Built for Scraping",
  "scripts": {
    "start:website": "yarn workspace @secret-agent/website start",
    "bump-version": "lerna version patch --no-git-tag-version",
    "build-scripts": "tsc -b injected-scripts/tsconfig.json",
    "tsc": "tsc -b tsconfig.json && cp -R injected-scripts build && cp yarn.lock build",
    "tsc-modules": "ln -sf node_modules build/node_modules",
    "build": "yarn tsc && yarn workspace @secret-agent/mitm build:copy && yarn workspace @secret-agent/replay build:copy",
    "watch": "tsc -b -w tsconfig.json",
    "clean": "tsc -b --clean  tsconfig.json && rm -rf build/injected-scripts yarn workspace @secret-agent/replay clean",
    "test": "yarn build-scripts && NODE_ENV=test CACHE_DIR=.cache-test jest --runInBand --no-cache",
    "updateUseragent": "node node_modules/useragent/bin/update.js",
    "postinstall": "yarn workspace @secret-agent/mitm build-install && yarn updateUseragent"
  },
  "repository": "git@github.com:ulixee/secret-agent.git",
  "author": "Data Liberation Foundation",
  "contributors": [
    "Caleb Clark",
    "Blake Byrnes"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ulixee/secret-agent/issues"
  },
  "homepage": "https://secretagent.dev",
  "engines": {
    "node": ">=12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": ". ~/.nvm/nvm.sh && lint-staged",
      "pre-push": "npm run test"
    }
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^12.7.11",
    "husky": "^1.3.1",
    "jest": "^25.3.0",
    "jest-environment-node": "^25.3.0",
    "jest-junit": "^6.3.0",
    "jest-summary-reporter": "^0.0.2",
    "lerna": "^3.4.3",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.19.1",
    "pretty-quick": "^1.8.0",
    "request": "^2.88.2",
    "rimraf": "^3.0.0",
    "source-map-support": "^0.5.16",
    "ts-jest": "^25.3.1",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "~3.8.3",
    "yamlparser": "0.0.x"
  },
  "workspaces": {
    "packages": [
      "client",
      "core",
      "core-interfaces",
      "emulators",
      "emulator-plugins/*",
      "full-client",
      "humanoids",
      "humanoid-plugins/*",
      "injected-scripts",
      "mitm",
      "noderdom",
      "core-server",
      "remote-client",
      "remote-interfaces",
      "replay",
      "replay-api",
      "shared/*",
      "shared/session-state",
      "website"
    ]
  },
  "lint-staged": {
    "linters": {
      "./**/*.ts": [
        "tslint --format verbose",
        "git add"
      ],
      "./**/*.json": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "publish/**"
    ]
  },
  "resolutions": {
    "remark-slug": "git://github.com/ulixee/remark-slug.git"
  }
}
