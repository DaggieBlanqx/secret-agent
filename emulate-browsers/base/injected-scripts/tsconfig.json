{
  "extends": "../../../tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "composite": true,
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "noImplicitAny": false,
    "esModuleInterop": false,
    "resolveJsonModule": false,
    "sourceMap": false,
    "declaration": true,
    "allowJs": true
  },
  "include": ["*.ts", "*.js", ".eslintrc.js"],
  "exclude": ["node_modules"]
}
