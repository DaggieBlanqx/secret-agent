{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["dom", "dom.iterable", "es2018"],
    "declaration": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "sourceMap": true,
    "module": "None",
    "outDir": "../build/injected-scripts",
    "composite": true,
    "resolveJsonModule": false,
    "moduleResolution": "node",
    "removeComments": true
  },
  "include": ["./interfaces/*.ts", "./scripts/*.ts", "./package.json", ".eslintrc.js"],
  "exclude": ["node_modules"]
}
